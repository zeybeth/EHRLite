@model Patient

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Patient Record</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label class="p-0">First Name</label>
            <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label class="p-0">Last Name</label>
            <input asp-for="LastName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label class="p-0">Date of Birth</label>
            <input asp-for="DateOfBirth" disabled class="form-control" type="text" />
        </div>

        <div class="alert alert-danger" role="alert">
            Warning: This action cannot be undone. Are you sure you want to delete this patient?
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
        </a>
    </div>
</form>