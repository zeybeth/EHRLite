@model Patient
@* Not: disabled etiketi sayesinde kullanıcı buradaki verileri görebilir ama değiştiremez
 *@
<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Hasta Kaydını Sil</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="p-0"></label>
            <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="p-0"></label>
            <input asp-for="LastName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DateOfBirth" class="p-0"></label>
            <input asp-for="DateOfBirth" disabled class="form-control" type="text" />
        </div>
        <div class="mb-3">
            <label asp-for="Gender" class="p-0"></label>
            <input asp-for="Gender" disabled class="form-control" />
        </div>

        <div class="alert alert-danger" role="alert">
            Bu işlem geri alınamaz! Bu hastayı silmek istediğinize emin misiniz?
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Vazgeç
        </a>
    </div>
</form>