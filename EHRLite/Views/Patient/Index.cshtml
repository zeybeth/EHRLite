@model List<Patient>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Patient List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Patient
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.FirstName</td>
                    <td>@obj.LastName</td>
                    <td>@obj.DateOfBirth.ToShortDateString()</td>
                    <td>@obj.Gender</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Patient" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                Edit
                            </a>

                            <a asp-controller="Visit" asp-action="Index" asp-route-patientId="@obj.Id" class="btn btn-info mx-2">
                                Visits
                            </a>

                            <a asp-controller="Patient" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>