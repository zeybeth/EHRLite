@model Visit

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="PatientId" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Muayene Kaydını Sil</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="VisitDate" class="p-0"></label>
            <input asp-for="VisitDate" disabled class="form-control" type="text" />
        </div>

        <div class="mb-3">
            <label asp-for="Diagnosis" class="p-0"></label>
            <input asp-for="Diagnosis" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DoctorNotes" class="p-0"></label>
            <textarea asp-for="DoctorNotes" disabled class="form-control" rows="3"></textarea>
        </div>

        <div class="alert alert-danger">
            Bu muayene kaydını silmek istediğinize emin misiniz?
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
        <a asp-controller="Visit" asp-action="Index" asp-route-patientId="@Model.PatientId" class="btn btn-secondary" style="width:150px">
            Vazgeç
        </a>
    </div>
</form>