@model LabResult

<form method="post">
    <input asp-for="VisitId" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Lab Result</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="TestName" class="p-0">Test Name</label>
            <input asp-for="TestName" class="form-control" placeholder="e.g. Hemoglobin" />
            <span asp-validation-for="TestName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 mb-3">
                <label asp-for="Value" class="p-0">Value</label>
                <input asp-for="Value" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Unit" class="p-0">Unit</label>
                <input asp-for="Unit" class="form-control" placeholder="e.g. mg/dL" />
            </div>
        </div>
        <div class="row">
            <div class="col-6 mb-3">
                <label asp-for="MinReference" class="p-0">Min Ref</label>
                <input asp-for="MinReference" class="form-control" type="number" step="0.01" />
            </div>
            <div class="col-6 mb-3">
                <label asp-for="MaxReference" class="p-0">Max Ref</label>
                <input asp-for="MaxReference" class="form-control" type="number" step="0.01" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-controller="LabResult" asp-action="Index" asp-route-visitId="@Model.VisitId" class="btn btn-secondary" style="width:150px">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}