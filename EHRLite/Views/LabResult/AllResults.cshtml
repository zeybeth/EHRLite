@using EHRLite.Models
@model List<LabResult>

@{
    ViewData["Title"] = "All Lab Results";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fa-solid fa-flask-vial"></i> All Laboratory Results</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Patient Name</th>
                        <th>Test</th>
                        <th>Value</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        // Risk Kontrolü (Mantık aynı kalıyor)
                        bool isRisky = false;
                        if (obj.MinReference != null && obj.Value < obj.MinReference) { isRisky = true; }
                        if (obj.MaxReference != null && obj.Value > obj.MaxReference) { isRisky = true; }

                        <tr>
                            <td>@obj.ResultDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (obj.Visit != null && obj.Visit.Patient != null)
                                {
                                    <span class="fw-bold">@obj.Visit.Patient.FirstName @obj.Visit.Patient.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown</span>
                                }
                            </td>
                            <td>@obj.TestName</td>
                            <td class="@(isRisky ? "text-danger fw-bold" : "")">
                                @obj.Value @obj.Unit
                            </td>
                            <td>
                                @if (isRisky)
                                {
                                    <span class="badge bg-danger">Abnormal</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Normal</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="LabResult" asp-action="Index" asp-route-visitId="@obj.VisitId" class="btn btn-sm btn-outline-primary">
                                    <i class="fa-solid fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>