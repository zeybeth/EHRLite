@using EHRLite.Models
@model List<LabResult>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Lab Results (@ViewBag.VisitDate)</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="LabResult" asp-action="Create" asp-route-visitId="@ViewBag.VisitId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Result
            </a>
            <a asp-controller="Visit" asp-action="Index" asp-route-patientId="@ViewBag.PatientId" class="btn btn-secondary">
                Back to Visits
            </a>
        </div>
    </div>

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Value</th>
                    <th>Unit</th>
                    <th>Ref Range</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    bool isAbnormal = false;
                    if (obj.MinReference != null && obj.Value < obj.MinReference) { isAbnormal = true; }
                    if (obj.MaxReference != null && obj.Value > obj.MaxReference) { isAbnormal = true; }

                    <tr class="@(isAbnormal ? "table-danger" : "")">
                        <td>@obj.TestName</td>
                        <td class="@(isAbnormal ? "text-danger fw-bold" : "")">
                            @obj.Value 
                            @if(isAbnormal) { <i class="bi bi-exclamation-circle-fill text-danger"></i> }
                        </td>
                        <td>@obj.Unit</td>
                        <td>@obj.MinReference - @obj.MaxReference</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="LabResult" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">Edit</a>
                                <a asp-controller="LabResult" asp-action="History" asp-route-patientId="@ViewBag.PatientId" asp-route-testName="@obj.TestName" class="btn btn-success mx-2">History</a>
                                <a asp-controller="LabResult" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No laboratory results found for this visit.</div>
    }

    <hr />
    
    <div class="row mt-4 mb-5">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Results Chart</h5>
                </div>
                <div class="card-body">
                    <canvas id="labChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        var labData = @Html.Raw(Json.Serialize(Model.Select(x => new {
            testName = x.TestName,
            value = x.Value,
            minReference = x.MinReference,
            maxReference = x.MaxReference
        })));

        var labels = [];
        var values = [];
        var backgroundColors = [];
        var borderColors = [];

        if (labData) {
            labData.forEach(function(item) {
                labels.push(item.testName);
                values.push(item.value);

                var min = item.minReference;
                var max = item.maxReference;
                var isAbnormal = false;

                if(min != null && item.value < min) isAbnormal = true;
                if(max != null && item.value > max) isAbnormal = true;

                if (isAbnormal) {
                    backgroundColors.push('rgba(255, 99, 132, 0.6)'); 
                    borderColors.push('rgba(255, 99, 132, 1)');
                } else {
                    backgroundColors.push('rgba(54, 162, 235, 0.6)');
                    borderColors.push('rgba(54, 162, 235, 1)');
                }
            });
        }

        document.addEventListener("DOMContentLoaded", function() {
            if(labels.length === 0) return;

            const ctx = document.getElementById('labChart');

            new Chart(ctx, {
                type: 'bar', 
                data: {
                    labels: labels, 
                    datasets: [{
                        label: 'Measured Value',
                        data: values, 
                        borderWidth: 2,
                        backgroundColor: backgroundColors, 
                        borderColor: borderColors          
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: false 
                        }
                    }
                }
            });
        });
    </script>
</div>