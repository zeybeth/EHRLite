@model LabResult

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="VisitId" hidden /> <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Lab Result</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="TestName" class="p-0"></label>
            <input asp-for="TestName" class="form-control" />
            <span asp-validation-for="TestName" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 mb-3">
                <label asp-for="Value" class="p-0"></label>
                <input asp-for="Value" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Unit" class="p-0"></label>
                <input asp-for="Unit" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-6 mb-3">
                <label asp-for="MinReference" class="p-0"></label>
                <input asp-for="MinReference" class="form-control" type="number" step="0.01" />
            </div>
            <div class="col-6 mb-3">
                <label asp-for="MaxReference" class="p-0"></label>
                <input asp-for="MaxReference" class="form-control" type="number" step="0.01" />
            </div>
        </div>

        <button type="submit" class="btn btn-warning" style="width:150px">Update</button>
        <a asp-controller="LabResult" asp-action="Index" asp-route-visitId="@Model.VisitId" class="btn btn-secondary" style="width:150px">Vazgeç</a>
    </div>
</form>

@section Scripts {
    @{
        //zorunlu bir alanı boş bırakıp "Güncelle"ye basarsan, sayfa gitmez ve hemen kırmızı uyarı çıkar
        <partial name="_ValidationScriptsPartial" /> 
    }
}