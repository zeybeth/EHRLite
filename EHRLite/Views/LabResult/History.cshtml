@{
    ViewData["Title"] = ViewBag.TestName + " Geçmişi";
}

<div class="container mt-5">
    <h2 class="text-primary text-center">@ViewBag.TestName - Zaman İçindeki Değişim</h2>
    <div class="card mt-4 shadow">
        <div class="card-body">
            <canvas id="historyChart"></canvas>
        </div>
    </div>
    <div class="mt-3 text-center">
        <button onclick="window.history.back()" class="btn btn-secondary">Geri Dön</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var dates = @Html.Raw(Json.Serialize(ViewBag.Dates));
    var values = @Html.Raw(Json.Serialize(ViewBag.Values));

    const ctx = document.getElementById('historyChart');

    new Chart(ctx, {
        type: 'line', // ÇİZGİ GRAFİK (Zaman değişimi için en iyisi)
        data: {
            labels: dates, // X Ekseni: Tarihler
            datasets: [{
                label: '@ViewBag.TestName Değerleri',
                data: values, // Y Ekseni: Sonuçlar
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1,
                pointRadius: 5,
                pointBackgroundColor: 'red'
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: false // Değerler 0'dan başlamak zorunda değil, değişimi görmek istiyoruz
                }
            }
        }
    });
</script>