@{
    ViewData["Title"] = ViewBag.TestName + " Geçmişi";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewBag.TestName - Zaman Çizelgesi</h4>
            <button onclick="window.history.back()" class="btn btn-light btn-sm">Geri Dön</button>
        </div>
        <div class="card-body">
            <canvas id="historyChart" height="120"></canvas>
        </div>
        <div class="card-footer text-muted text-center">
            <small><i class="bi bi-circle-fill text-danger"></i> Kırmızı noktalar referans dışı değerleri gösterir.</small>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var rawData = @Html.Raw(Json.Serialize(ViewBag.ChartData));

    var dates = [];
    var values = [];
    var minRefs = [];
    var maxRefs = [];
    var pointColors = [];

    if (rawData) {
        rawData.forEach(function(item) {
            dates.push(item.date);
            values.push(item.value);

            // Eğer referans değeri yoksa null dönsün ki grafik saçmalamasın
            minRefs.push(item.min);
            maxRefs.push(item.max);

            // Risk Analizi (Kırmızı Nokta Mantığı)
            var isRisky = false;
            if(item.min != null && item.value < item.min) isRisky = true;
            if(item.max != null && item.value > item.max) isRisky = true;

            if (isRisky) {
                pointColors.push('red');
            } else {
                pointColors.push('rgb(75, 192, 192)');
            }
        });
    }

    const ctx = document.getElementById('historyChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: dates,
            datasets: [
                // 1. HASTA DEĞERLERİ (Mavi/Kırmızı Çizgi)
                {
                    label: 'Ölçülen Değer',
                    data: values,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    pointBackgroundColor: pointColors,
                    pointRadius: 6,
                    pointHoverRadius: 8,
                    borderWidth: 3, // Çizgiyi kalınlaştırdık
                    tension: 0.3,
                    fill: false,
                    order: 1 // En üstte görünsün
                },
                // 2. ÜST SINIR (Kırmızımsı Kesik Çizgi)
                {
                    label: 'Max Referans',
                    data: maxRefs,
                    borderColor: 'rgba(255, 99, 132, 0.5)', // Hafif kırmızı sınır
                    borderWidth: 2,
                    borderDash: [10, 5], // Uzun kesik çizgiler
                    pointRadius: 3, // Tek veri olsa bile görünsün diye nokta koyduk
                    pointBackgroundColor: 'rgba(255, 99, 132, 0.5)',
                    fill: false,
                    order: 2
                },
                // 3. ALT SINIR (Mavimsi Kesik Çizgi)
                {
                    label: 'Min Referans',
                    data: minRefs,
                    borderColor: 'rgba(54, 162, 235, 0.5)', // Hafif mavi sınır
                    borderWidth: 2,
                    borderDash: [10, 5],
                    pointRadius: 3, // Tek veri olsa bile görünsün
                    pointBackgroundColor: 'rgba(54, 162, 235, 0.5)',
                    fill: false, // Arasını boyama (Chart.js plugin olmadan karışık olabilir, şimdilik boş kalsın)
                    order: 3
                }
            ]
        },
        options: {
            responsive: true,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            scales: {
                y: {
                    beginAtZero: false,
                    grid: {
                        color: 'rgba(200, 200, 200, 0.3)' // Arka plan ızgarasını belirginleştirdik
                    }
                }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'Değerlerin Referans Aralıklarına Göre Değişimi'
                }
            }
        }
    });
</script>